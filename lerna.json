{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "bootstrap": {
      "ci": true
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): Release",
      "tagVersionPrefix": ""
    },
    "publish": {
      "verifyAccess": false
    }
  }
}
